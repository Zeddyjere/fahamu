	<div class="smdividerr"></div>
	
	<script>
	
		var results = [];
		var totalresults = 0;
		
		<% for(var i = 0; i < user.results.length; i++) { %>
					results.push(<%= user.results[i].result %>);
		<% } %>
		
		for(var l = 0; l < results.length; l++) {
			totalresults += results[l];
		}
		
		// console.log(results);
		// console.log(totalresults);
		
		var totalscore = document.getElementById("totalscore");
		totalscore.textContent = totalresults;
		
		function confirm() {
			return confirm("Are you sure?")
		}
		
		
	</script>
	
	
 

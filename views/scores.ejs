	<div class="main">

    	<div class="headsec">
            <h4>Scores and Achievements</h4>
            <p>(Here, you can track your progress throughout your time at Fahamu)</p>
        </div>
        
        <div class="smdividerr"></div>
        
        <div class="row">
        	<div class="col s12 m4">
        		<div class="activityitem tenpxmargin z-depth-2">
		        	<p>Your total scores:</p>
		        	<h1 id="totalscore"></h1>
		        </div>
        	</div>
        	<div class="col s12 m4">
        		<div class="activityitem tenpxmargin z-depth-2">
		        	<p>No. of testpapers you have done:</p>
		        	<h1><%= user.results.length %></h1>
		        </div>
        	</div>
        	<div class="col s12 m4">
        		<div class="activityitem tenpxmargin z-depth-2">
		        	<p>Milestones:</p>
		        	<h1>0</h1>
		        </div>
        	</div>
        </div>
       
        
        <div class="smdividerr"></div>
        
        <p class="sc_testhead">Mathematics <i class="fa fa-caret-down" aria-hidden="true"></i></p>
        
        <% user.results.forEach(function(result) { %>
        
        <% if(result.testpaperSubject == "Mathematics") { %>
        
        			<div class="activityitem">
								  <div class="row">
					                <div class="col s12 l4">
					                    <strong><p class="uppercase"><%= result.testpaperName %></p></strong>
					                </div>
					                <div class="col s12 l4 center left-on-mob">
					                    <span class="uppercase"><%= result.className %></span>
					                </div>
					                <div class="col s12 l4">
					                	
					                	<% if(result.result >= 50) { %>
					                		<span class="new badge" data-badge-caption="%"><%= result.result %></span>
					                	<% } else { %>
					                		<span class="new badge red" data-badge-caption="%"><%= result.result %></span>
					                	<% } %>
					                	
					                	<form action="/scores/<%= result._id %>?_method=DELETE" method="POST">
					                		<button onclick="deleteConfirm()" class="right btn-flat clausebtn">Delete</button>
					                	</form>
					                	
					                </div>
					            </div>
							</div>
  
        <% } %>
            
      <% }) %>
      
      <div class="smdividerr"></div>	
      

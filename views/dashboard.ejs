<% include partials/header %>

	<ul id="slide-out" class="side-nav fixed">
		<li>
			<div class="userView">
				<img src="https://image.ibb.co/gceHXk/Fahamu_logo.jpg" class="circle responsive-img center-align circleborder z-depth-4" alt="Responsive image">
				<a href="#!name"><span class="blacktxt centertxt name"><strong><h6 class="namefontsize"><%= currentUser.firstname %> <%= currentUser.secondname %></h6></strong></span></a>
				<a href="#!email"><span class="blacktxt centertxt name"><h6><%= currentUser.classname %></h6></span></a>
				<% if(currentUser.accountauth != null) { %>
			 	<a href="#!email"><span class="blacktxt centertxt name"><h6>(<%= currentUser.accountauth %>)</h6></span></a>
				<% } %>
			</div>
		</li>
		<div class="smdividerr"></div>
		<li class="sidenavli z-depth-2"><a  href="/dashboard"><i class="fa fa-tachometer" aria-hidden="true"></i>Dashboard</a></li>
		<li><a href="/subjects"><i class="fa fa-book" aria-hidden="true"></i>Subjects</a></li>
		<li><a href="/scores"><i class="fa fa-trophy" aria-hidden="true"></i>Scores and Achievements</a></li>
		<li><a href="/competitions"><i class="fa fa-quora" aria-hidden="true"></i>Competitions</a></li>
		<li><a href="/profile"><i class="fa fa-user" aria-hidden="true"></i>Profile</a></li>
	</ul>
			  
	<div class="main">
		<div class="headsec">
			<h4>Dashboard</h4>
			<p>(Keep track of your recent events and other activities here at Fahamu)</p>
			<a href="/subjects" class="btn btn-default purplebutton spaceup">Start Revision</a>
		</div>
		
		<% if(user.results == null || user.results == "") { %>
			<div class="flashgeneral">
				<p><i class="fa fa-exclamation-circle" aria-hidden="true"></i> You have no recent activities yet. Start a fun revision experience here at Fahamu.</p>
			</div>
		<% } else { %> 
			<div class="activityhead spaceup">
				<div class="row">
	                <div class="col s12 l4">
	                    <p><i class="fa fa-rss" aria-hidden="true"></i> Last time you were here</p>
	                </div>
	                <div class="col s12 l8">
	                     <a href="/scores" type="button" class="btn btn-default btn-sm purplebutton right left-on-mob">Review</a>
	                </div>
	            </div>
			</div>
			
			<% 	var length = user.results.length; %>
			
				<div class="activityitem">
					<div class="row">
		                <div class="col s12 l4">
		                    <strong><p class="sevenpxtop uppercase"><%= user.results[length - 1].testpaperName %></p></strong>
		                </div>
		                <div class="col s12 l4 center left-on-mob">
		                     <p class="sevenpxtop"><%= user.results[length - 1].testpaperSubject %></p>
		                </div>
		                <div class="col s12 l4">
		                	<p class="sevenpxtop right"><%= user.results[length - 1].className %></p>
		                </div>
		            </div>
				</div>
			
		<% } %>

		
	</div>
 
<% include partials/footer %>